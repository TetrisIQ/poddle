{
   "$schema":"https://docs.renovatebot.com/renovate-schema.json",
   "extends":[
      "config:base"
   ],
   "packageRules":[
      {
         "groupName":"all non-major dependencies",
         "groupSlug":"all-minor-patch",
         "automerge":true,
         "matchPackagePatterns":[
            "*"
         ],
         "matchUpdateTypes":[
            "minor",
            "patch"
         ]
      }
   ]
}
